{
  "name": "pmp-agentclaw",
  "version": "1.0.0",
  "description": "Project Management Professional agent for OpenClaw",
  "skills": ["skill"],
  "commands": [
    {
      "name": "pm-health",
      "description": "Run project health check",
      "script": "dist/cli/health-check.js"
    },
    {
      "name": "pm-evm",
      "description": "Calculate earned value metrics",
      "script": "dist/cli/calc-evm.js"
    },
    {
      "name": "pm-risk",
      "description": "Score a risk (probability Ã— impact)",
      "script": "dist/cli/score-risks.js"
    },
    {
      "name": "pm-velocity",
      "description": "Calculate sprint velocity and forecast",
      "script": "dist/cli/calc-velocity.js"
    }
  ],
  "configuration": {
    "methodology": {
      "type": "string",
      "enum": ["predictive", "adaptive", "hybrid"],
      "default": "hybrid",
      "description": "Default project management methodology"
    },
    "sprintDurationWeeks": {
      "type": "number",
      "default": 2,
      "description": "Default sprint duration in weeks"
    },
    "evmEnabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable Earned Value Management tracking"
    },
    "autoHealthCheck": {
      "type": "boolean",
      "default": true,
      "description": "Run health check at start of each session"
    }
  }
}
