{
  "name": "@torknetwork/guardian",
  "version": "1.0.2",
  "description": "AI governance and security layer for OpenClaw agents. Intentionally inspects AI agent traffic to detect PII leaks, policy violations, and dangerous tool calls.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tork",
    "governance",
    "openclaw",
    "mcp",
    "security",
    "pii",
    "ai-safety"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/torkjacobs",
    "directory": "landing/packages/tork-guardian"
  },
  "bin": {
    "tork-scan": "dist/scanner/cli.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "permissions": {
    "env": ["TORK_API_KEY"],
    "network": ["https://tork.network/api/*", "https://api.github.com/*"]
  },
  "config": {
    "TORK_API_KEY": {
      "description": "API key for authenticating with the Tork governance API",
      "required": true
    }
  },
  "homepage": "https://tork.network",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "vitest": "^4.0.18"
  }
}
